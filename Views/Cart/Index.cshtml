
@model IEnumerable<Cart>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@if(TempData["succss"] != null)
{
    <h2>
        @TempData["success"]
    </h2>
}


<div class = "container p-2">
    <div class = "row pt-3">
       <div class = "col-5">
           <h2 class="text-primary">
               Cart
           </h2>
       </div>
       <div class=col-5 text-end>
           <a asp-controller="ProductItems" asp-action= "Browse" class ="btn btn-primary">
               Back To Browsing
           </a>
       </div>
        <div class=col-2 text-end>
           <a asp-controller="Customer" asp-action= "CheckOutHomePage" class ="btn btn-primary">
               CheckOut
           </a>
       </div>
       
      

    </div>

<table class = "table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>    
           
            <th>
                Product Name
            </th>
            <th>
                Product Category
            </th>
            <th>
                Product Description
            </th>
            <th>
                Product Price
            </th>
             <th>
                Product Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
               

                <td width = "20%">
                    @obj.itemTitle
                </td>
                
                <td width = "20%">
                    @obj.category
                </td>
                <td width = "30%">
                    @obj.description
                </td>

                 <td width = "10%">
                    @obj.price
                </td>

                <td width = "10%">
                    @obj.quantity
                </td>
                <td>
                    <div class="w-75 btn-group" roles="group">
                        <a asp-controller="Cart" asp-action="Remove" asp-route-id="@obj.itemId"
                        class ="btn btn-primary mx-2" >Update </a>
                       
                    </div>
                </td>

            </tr>
        }

    </tbody>

</table>
</div>




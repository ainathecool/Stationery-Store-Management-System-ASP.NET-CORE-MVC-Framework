@model IEnumerable<Stock>
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if(TempData["succss"] != null)
{
    <h2>
        @TempData["success"]
    </h2>
}


<div class = "container p-2">
    <div class = "row pt-3">
       <div class = "col-5">
           <h2 class="text-primary">
               Stock List
           </h2>
       </div>
       <div class=col-7 text-end>
           <a asp-controller="Stock" asp-action= "Add" class ="btn btn-primary">
               Add Inventory
           </a>
       </div>

    

      
    </div>
<table class = "table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>    
           
            <th>
                Stock ID
            </th>
            <th>
                Item ID
            </th>
            <th>
                Stock Item Title
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width = "10%">
                    @obj.stockID
                </td>

                <td width = "10%">
                    @obj.itemID

                </td>
                
                <td width = "40%">
                    @obj.itemTitle
                </td>
                <td width = "10%">
                    @obj.quantity
                </td> 
                 <td>
                    <div class="w-75 btn-group" roles="group">
                        <a asp-controller="Stock" asp-action="Update" asp-route-id="@obj.stockID"
                         class ="btn btn-primary mx-2">Update <i class="bi bi-pencil-square"> </i></a>
                         <a asp-controller="Stock" asp-action="Remove" asp-route-id="@obj.stockID"
                         class ="btn btn-primary mx-2">Delete<i class="bi bi-pencil-square"> </i></a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>

</div>


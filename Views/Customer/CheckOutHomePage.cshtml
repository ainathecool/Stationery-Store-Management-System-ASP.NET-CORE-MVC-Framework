
@model IEnumerable<Customer>
@{
    ViewData["Title"] = "CheckOutHomePage";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@if(TempData["succss"] != null)
{
    <h2>
        @TempData["success"]
    </h2>
}
 

    <div class = "border p-3 mt-4">
        <div class = "rpw pb-2">
            <h2 class ="text-primary">
                CheckOut Confirmation
            </h2>
        </div>


        
    </div>


<table class = "table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>    
           
            <th>
               Customer ID
            </th>
            <th>
                Customer Name
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
               

                <td width = "20%">
                    @obj.customerId
                </td>
                
                <td width = "20%">
                    @obj.CustomerName
                </td>
              
                
         <td>
                    <div class="w-75 btn-group" roles="group">
                        <a asp-controller="Customer" asp-action="CheckOut" asp-route-id="@obj.customerId"
                        class ="btn btn-primary mx-2">Confirm CheckOut with your ID </a>
                       
                    </div>
                </td>


            </tr>
        }

    </tbody>

</table>
</div>
@section Scripts
{
    @{
         <partial name="_ValidationScriptsPartial" />
    }
}



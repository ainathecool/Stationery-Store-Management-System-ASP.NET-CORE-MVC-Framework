
@model PromotionalOffers
@{
    ViewData["Title"] = "Add Offers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method = "post" asp-action="Remove"> 
    <input asp-for="offerID" hidden />


    <div class = "border p-3 mt-4">
        <div class = "rpw pb-2">
            <h2 class ="text-primary">
                Delete Offer
            </h2>
        </div>
       
        
       
         <div class = "mb-3">
            <label asp-for="offerName">  </label> 
            <input asp-for="offerName" disbaled class = "form-control" />
             
        </div>

         <div class = "mb-3">
            <label asp-for="offerDescription">  </label>
            <input asp-for="offerDescription" disbaled class = "form-control" />
            
        </div>

         <div class = "mb-3">
            <label asp-for="offerDuration">  </label>
            <input asp-for="offerDuration" disbaled class = "form-control" />
           
        </div>

        <button type = "submit" class = " btn btn-primary" style="width:150px">Delete</button>
   <a asp-controller = "PromotionalOffers" asp-action="Index" class=" btn btn-secondary" style="width:150px">
       Back To Offers
   </a>
    </div>
</form>

@section Scripts
{
    @{
         <partial name="_ValidationScriptsPartial" />
    }
}

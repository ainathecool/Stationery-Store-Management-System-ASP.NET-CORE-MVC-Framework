@model IEnumerable<PromotionalOffers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if(TempData["succss"] != null)
{
    <h1>
        @TempData["success"]
    </h1>
}

   
    
<div class = "container p-2">
    <div class = "row pt-3">
       <div class = "col-5">
           <h2 class="text-primary">
               Promotional Offers List
           </h2>
       </div>
       <div class=col-7 text-end>
           <a asp-controller="PromotionalOffers" asp-action= "Add" class ="btn btn-primary">
               Add Offers
           </a>
       </div>

      
    </div>
<table class = "table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>    
           
            <th>
                Offer ID
            </th>
            <th>
                Offer Name
            </th>
            <th>
                Offer Description
            </th>
            <th>
                Offer Duration
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width = "10%">
                    @obj.offerID
                </td>

                <td width = "30%">
                    @obj.offerName
                </td>
                
                <td width = "40%">
                    @obj.offerDescription
                </td>
                <td width = "10%">
                    @obj.offerDuration
                </td> 

                 <td>
                    <div class="w-75 btn-group" roles="group">
                        <a asp-controller="PromotionalOffers" asp-action="Update" asp-route-id="@obj.offerID"
                         class ="btn btn-primary mx-2">Update <i class="bi bi-pencil-square"> </i></a>
                          <a asp-controller="PromotionalOffers" asp-action="Remove" asp-route-id="@obj.offerID"
                         class ="btn btn-primary mx-2">Delete <i class="bi bi-pencil-square"> </i></a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>
</div>




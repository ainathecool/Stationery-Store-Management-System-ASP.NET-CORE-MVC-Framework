@model IEnumerable<ProductItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if(TempData["succss"] != null)
{
    <h1>
        @TempData["success"]
    </h1>
}


<div class = "container p-2">
    <div class = "row pt-3">
       <div class = "col-5">
           <h2 class="text-primary">
               Products Item List
           </h2>
       </div>
       <div class=col-7 text-end>
           <a asp-controller="ProductItems" asp-action= "Add" class ="btn btn-primary">
               Add New Item
           </a>
       </div>
       
      

    </div>

<table class = "table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>    
           
            <th>
                Product Name
            </th>
            <th>
                Product Category
            </th>
            <th>
                Product Description
            </th>
            <th>
                Product Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
               

                <td width = "20%">
                    @obj.itemTitle
                </td>
                
                <td width = "20%">
                    @obj.category
                </td>
                <td width = "30%">
                    @obj.description
                </td>

                 <td width = "10%">
                    @obj.price
                </td>
                <td>
                    <div class="w-75 btn-group" roles="group">
                        <a asp-controller="ProductItems" asp-action="Update" asp-route-id="@obj.itemId"
                        class ="btn btn-primary mx-2">Update </a>
                         <a asp-controller="ProductItems" asp-action="Remove" asp-route-id="@obj.itemId"
                        class ="btn btn-danger mx-2"> Delete</a>
                    </div>
                </td>

            </tr>
        }

    </tbody>

</table>
</div>

